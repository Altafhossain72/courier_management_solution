       <Label GridPane.rowIndex="2">
         <graphic>
            <FontAwesomeIconView fill="#0598ff" glyphName="USER" size="19" />
         </graphic></Label>
       <!-- Add UserID Text Field -->
       <TextField fx:id="custIdField" prefHeight="28.0" prefWidth="206.0" promptText="USER ID" style="-fx-background-color: transparent; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   	
   
       
       <!-- Add Password Label -->
       <Label GridPane.rowIndex="7">
         <graphic>
            <FontAwesomeIconView fill="#0598ff" glyphName="KEY" size="19" />
         </graphic></Label>
       <!-- Add Password Field -->
       <PasswordField fx:id="passField" prefHeight="24.0" prefWidth="190.0" promptText="PASSWORD" style="-fx-background-color: transparent; -fx-border-color: #0598ff; -fx-border-width: 0px 0px 2px 0px;" GridPane.columnIndex="1" GridPane.rowIndex="7" />
   
